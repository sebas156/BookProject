<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryColorApp</item>
        <item name="colorPrimaryVariant">@color/PrimaryDarkColorApp</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SecundaryColorApp</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewSubTitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>
    <style name="TextViewNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>